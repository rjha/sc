<div id="list-popup">
    <div class="wrapper">
        <div class="floatr">
            <span><a href="#" id="close-list-container">close&nbsp;x</a> </span>
        </div>
        <div>
            <span class="faded-text">click on a list name to select</span> 
        </div>

    </div>
    <div id="list-wrapper">
        <ul id="lists">
        ~foreach($view->lists as $id => $name){~
            <li><a id="~~$id~" class="select-list" href="#">~~$name~</a></li>
        ~}~
        </ul>
    </div>

    <div id="list-form-wrapper">
        <form  id="list-form1"  name="list-form1" action="/user/action/list/update.php"   method="POST">
            <span class="faded-text">or enter a new list name and click create</span> <br>
            <input class="faded-text" id="new-list-name" name="new-list-name" maxlength="64" type="textbox" value="" />
            &nbsp;&nbsp;
            <button type="submit" id ="create-list" class="btn" name="create" value="Create"><span>Create</span></button>
            <input type="hidden" name="items_json" value="" />
            <input type="hidden" name="list_id" value="" />
            <input type="hidden" name="is_new" value="1" />
            <input type="hidden" name="image_error" value="0" />
            <input type="hidden" name="qUrl" value="~~$view->qUrl~" />
        </form>
    </div>
</div>