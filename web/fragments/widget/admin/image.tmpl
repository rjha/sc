<div class="widget separator1">
     
     <div class="options">
        <div class="links">
            <a href="~~$view->editUrl~">Edit &nbsp;<i class="icon-edit"></i></a>
            &nbsp;|&nbsp;
            <a href="~~$view->deleteUrl~">Delete &nbsp;<i class="icon-remove"></i></a>
            ~if($view->feature){~
                &nbsp;|&nbsp;
                <a id="~~$view->id~" class ="feature-post-link" href="">Feature</a>&nbsp;
            ~}~
            ~if($view->unfeature){~
                &nbsp;|&nbsp;
                <a id="~~$view->id~" class ="unfeature-post-link" href="">Unfeature</a>&nbsp;
            ~}~
