<div class="widget">
     
     <div class="options">
        <div class="links">
            <a href="~~$view->editUrl~"><i class="icon-edit"></i> Edit</a>
            &nbsp;|&nbsp;
            <a href="~~$view->deleteUrl~"><i class="icon-trash"></i> Delete</a>
            ~if($view->feature){~
                &nbsp;|&nbsp;
                <a id="~~$view->id~" class ="feature-post" href=""> Feature</a>
            ~}~
            ~if($view->unfeature){~
                &nbsp;|&nbsp;
                <a id="~~$view->id~" class ="unfeature-post" href=""> Unfeature</a>
            ~}~
             

        </div>
    </div> <!-- options -->

    <div class="photo">
        <a href="/item/~~$view->itemId~"> <img src="~~$view->thumbnail~" class="alignleft" width="~~$view->twidth~" height="~~$view->theight~" class="alignleft" alt="~~$view->title~"/> </a>
    </div>

    <div class="description">
        <div id="fps-~~$view->id~">
            ~if($view->unfeature){~
             <span class="badge">F</span>
            ~}~
        </div>
        <p> ~~$view->description~ </p>
        <p> <span>~~$view->createdOn~ </span> </p>
    </div>
   

</div>
