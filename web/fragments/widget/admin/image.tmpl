<div class="widget">

    <div class="row">
        <div class="span7">

            <div class="photo">
                <a href="/item/~~$view->itemId~"> <img src="~~$view->srcImage~" class="alignleft" width="~~$view->width~" height="~~$view->height~" title="~~$view->originalName~"  alt="~~$view->originalName~"/> </a>

            </div>
            <p> ~~$view->description~ </p>
            <p> <span class="b">~~$view->createdOn~ </span> </p>
            <div class="options">
                 <div class="links">
                    <a href="~~$view->editUrl~">Edit</a>
                    &nbsp;|&nbsp;
                    <a href="~~$view->deleteUrl~">Delete</a>
                    ~if($view->feature){~
                        &nbsp;|&nbsp;
                        <a id="~~$view->id~" class ="feature-post-link" href="">Feature</a>&nbsp;
                    ~}~
                    ~if($view->unfeature){~
                        &nbsp;|&nbsp;
                        <a id="~~$view->id~" class ="unfeature-post-link" href="">Unfeature</a>&nbsp;
                    ~}~

                </div>
            </div>

        </div> <!-- span7-->
        <div class="span2">
            &nbsp;
        </div> <!-- span2-->

    </div> <!-- row -->

</div>
