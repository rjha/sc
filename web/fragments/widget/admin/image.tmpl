<div class="widget">
    <div class="photo">
        <a href="/item/~~$view->itemId~"> <img src="~~$view->thumbnail~" width="~~$view->twidth~" height="~~$view->theight~" class="alignleft" alt="~~$view->title~"/> </a>
    </div>
        <p> ~~$view->description~ </p>
        <p> <span>~~$view->createdOn~ </span> </p>
        <div class="options">
                <div class="links">
                <a href="~~$view->editUrl~">Edit</a>
                &nbsp;|&nbsp;
                <a href="~~$view->deleteUrl~">Delete</a>
                ~if($view->feature){~
                    &nbsp;|&nbsp;
                    <a id="~~$view->id~" class ="feature-post-link" href="">Feature</a>&nbsp;
                ~}~
                ~if($view->unfeature){~
                    &nbsp;|&nbsp;
                    <a id="~~$view->id~" class ="unfeature-post-link" href="">Unfeature</a>&nbsp;
                ~}~

            </div>
        </div>

</div>
