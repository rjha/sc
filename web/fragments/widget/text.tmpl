<div class="widget separator1">
    <div class="options">
        <div class="links">
            ~if($view->hasEdit){~
                <a href="~~$view->editUrl~"><i class="icon-edit"></i>&nbsp;Edit</a>
            ~}~
            &nbsp;
            ~if($view->hasDelete){~
                <a href="~~$view->deleteUrl~"><i class="icon-remove"></i>&nbsp;Delete</a>
            ~}~
        </div>
    </div>
    
    <p>
        <i class="icon-asterisk"></i>&nbsp;
        ~~$view->description~
        <br/>
        <span class="ml20">
            ~~$view->createdOn~
