<div class="widget p10">

     <div class="row">
        <div class="span1">
            <input type="checkbox" name="g[]" value="~~$view->id~" />
        </div>
        
        <div class="span5">
            <h5> <a href="/item/~~$view->itemId~">~~$view->title~</a> </h5>
            <div class="p5">
                ~if($view->hasGroups){
                    foreach($view->groups as $group){~
                    <a class="label" href="/group/~~$group["slug"]~">~~$group["display"]~</a>&nbsp;
                ~}}~
            </div>
    
            <div class="p5">~~$view->createdOn~ </div>
            <div class="p5"> 
                ~if($view->hasEdit){~
                <a href="~~$view->editUrl~"><i class="icon-edit"></i>&nbsp;Edit</a>
                ~}~
           
            </div>
        </div>
        

    </div> <!-- widget:row -->

</div>

