<div class="widget">
    <div class="photo">
            <a href="/item/~~$view->itemId~"> <img src="~~$view->thumbnail~" width="~~$view->twidth~" height="~~$view->theight~" class="alignleft" alt="~~$view->title~"/> </a>

        </div>
        <p> ~~$view->description~ </p>
        <p> <span>~~$view->createdOn~ </span> </p>

        <div class="options">
