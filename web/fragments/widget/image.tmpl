<div class="widget">
    
	<div class="row">
		<div class="span7">

			<div class="photo">
				<a href="/item/~~$view->itemId~"> <img src="~~$view->srcImage~" class="alignleft" width="~~$view->width~" height="~~$view->height~" title="~~$view->originalName~"  alt="~~$view->originalName~"/> </a> 

			</div>
			<p>
				~~$view->description~
			</p>
            <div class="options">
                 <div class="links">
                    ~if($view->hasEdit){~
                        <a href="~~$view->editUrl~"><i class="icon-edit"></i>&nbsp;Edit</a>
                    ~}~
                    &nbsp;
                    ~if($view->hasDelete){~
                        <a href="~~$view->deleteUrl~"><i class="icon-remove"></i>&nbsp;Delete</a>
                    ~}~
                </div>
            </div>

		</div> <!-- span7-->
		<div class="span2">

			<div class="author p10">
				<div class="meta">
					<span class="b">~~$view->createdOn~ </span>
				</div>	
			</div>
			
		</div> <!-- span2-->
        
	</div> <!-- row -->
    
</div>
