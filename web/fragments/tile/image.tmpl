<div class="tile">
   <div class="options">
        <div class="links">
            ~if($view->hasLike){~
            <a id="~~$view->itemId~" class ="like-post-link" href="">
                <i class="icon-asterisk"></i>&nbsp;Like</a> &nbsp;
            ~}~
            ~if($view->hasSave){~
            <a id="~~$view->itemId~" class="favorite-post-link" href="">
                <i class="icon-bookmark"></i>&nbsp;Favorite</a> &nbsp;
            ~}~

            ~if($view->hasRemove){~
            <a id="~~$view->itemId~" class ="remove-post-link" href="">
                <i class="icon-remove"></i>&nbsp;Remove</a> &nbsp;
            ~}~

        </div>
    </div>
    <div class="photo">
        <a href="/item/~~$view->itemId~">
            <img src="~~$view->srcImage~" title="~~$view->originalName~"  alt="~~$view->title~"/>
        </a>
    </div>

    <div class="description">
        <p> ~~$view->description~ </p>
    </div>

    <div>
        <span class="b"> <a href="~~$view->userPageURI~">~~$view->userName~</a> </span>
    </div>

    ~if($view->hasGroups) {~
    <div class="groups">
    Groups:
        ~foreach($view->groups as $group){~
            <a href="/group/~~$group['slug']~">~~$group['display']~</a>&nbsp;

        ~}~

    </div>
    ~}~


</div>



