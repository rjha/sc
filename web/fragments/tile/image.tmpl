<div class="tile">
   <div class="options">
        <div class="links">
            ~if($view->hasLike){~
            <a id="~~$view->itemId~" class ="like-post-link" href="">Like&nbsp;<i class="icon-heart"></i></a>&nbsp;
            ~}~
            ~if($view->hasSave){~
            <a id="~~$view->itemId~" class="save-post-link" href="">Save&nbsp;</a>&nbsp;
            ~}~
            
            ~if($view->hasRemove){~
            <a id="~~$view->itemId~" class ="remove-post-link" href="">Remove&nbsp;<i class="icon-remove"></i></a>&nbsp;
            ~}~

        </div>
    </div>
	<div class="photo">         
		<a href="/item/~~$view->itemId~">
			<img src="~~$view->srcImage~" title="~~$view->originalName~"  alt="~~$view->originalName~"/>
        </a> 
    </div>
	
	<div class="description">
		<p> ~~$view->description~ </p>
	</div>
	   
	<div class="author">
		<div class="meta">
			<span class="b"> <a href="~~$view->userPageURI~">~~$view->userName~</a> </span>
			<span>&nbsp;~~$view->createdOn~</span>
		</div>
	</div>
    
    ~if($view->hasGroups) {~
    <div class="groups">
    Groups:
        ~foreach($view->groups as $group){~
            <a href="/group/~~$group['slug']~">~~$group['display']~</a>&nbsp;

        ~}~

    </div>
    ~}~

	
</div>


   
